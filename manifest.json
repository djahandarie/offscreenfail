{
    "manifest_version": 2,
    "name": "OffscreenCanvas Transfer Test",
    "version": "1.0",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "iframe.html",
        "worker.js"
    ]
}
